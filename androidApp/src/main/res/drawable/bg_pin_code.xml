<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_focused="false">
        <shape>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <size android:width="@dimen/_70dp" android:height="@dimen/_48dp"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/_5dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/primary_variant"/>
            <size android:width="@dimen/_70dp" android:height="@dimen/_48dp"/>
            <solid android:color="@color/alice_blue"/>
            <corners android:radius="@dimen/_5dp"/>
        </shape>
    </item>
    
    <item>
        <shape>
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <size android:width="@dimen/_70dp" android:height="@dimen/_48dp"/>
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="@dimen/_5dp"/>
        </shape>
    </item>

    <item app:state_error="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/mauvelous"/>
            <size android:width="@dimen/_70dp" android:height="@dimen/_48dp"/>
            <solid android:color="@color/lavender_blush"/>
            <corners android:radius="@dimen/_5dp"/>
        </shape>
    </item>

</selector>